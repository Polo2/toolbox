
<%= simple_form_for(@tank) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date, label: "date", as: :date, order: [:day, :month, :year]  %>
    <%= f.input :distance, label: "relevé km" %>
    <%= f.input :volume, label: "volume (L)" %>
    <%= f.input :price, label: "montant (€)" %>
    <%= f.input :full, label: "plein complet ?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "OK", class: "btn btn-primary" %>
    <%= link_to 'Retour liste', tanks_path, class: "btn btn-secondary" %>
  </div>
<% end %>
